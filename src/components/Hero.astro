---
import Redes from "./Redes.astro";
---

<section class="bg">
    <ul class="menu">
        <a href="#about">Información</a>
        <a href="#services">Paquetes</a>
        <a href="#gallery">Galería</a>
    </ul>
    <div class="textos">
        <h1>
            <span class="a">A</span>
            <span class="l">l</span>
            <span class="o">o</span>
            <span class="h">h</span>
            <span class="aa">a</span>
            <span class="trimaran">trimaran</span>
        </h1>
        <h2>MAZATLÁN, SINALOA</h2>
        <Redes/>
    </div>
</section>

<style>
    section {
        color: white;
        height: 100dvh;
        display: grid;
        place-items: center;
        position: relative;
    }

    .bg {
        --opacity: 0.5;
        background: 
            linear-gradient(to top, rgba(0, 0, 0, var(--opacity)), rgba(0, 0, 0, var(--opacity))),
            url('/10.jpg')
        ;
        background-position: center;
        background-size: cover;
    }

    .menu {
        position: absolute;
        top: 2.5%;
        left: 50%;
        transform: translateX(-50%);
        font-weight: 500;
        display: flex;
        gap: 4rem;

        & a {
            padding: .5rem 1.5rem;
            border-radius: .5rem;
            cursor: pointer;
        }
    }

    .textos {
        text-align: center;
        font-weight: bold;

        & h1 {
            font-family: "Caveat", system-ui;
            font-size: 8rem;
            line-height: 1;
            display: flex;
            justify-content: center;
            align-items: center;

            & .a { color: #0282b2; }
            & .l { color: #f47b26; }
            & .o { color: #f9e530; }
            & .h { color: #db052b; }
            & .aa { color: #2e3fff; }
            & .trimaran { margin-left: 2rem; }
        }

        & h2 {
            margin-top: -.75rem;
            margin-bottom: 1.5rem;
        }
    }
</style>